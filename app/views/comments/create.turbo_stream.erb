<% if @comment.errors.present? %>
  <%= turbo_stream.replace "comment-form" do %>
    <%= render 'comments/form', group: @group, summary: @comment.summary, comment: @comment %>
  <% end %>
<% else %>
  <%= turbo_stream.prepend "table-comment" do %>
    <%= render 'comments/comment', group: @group, summary: @comment.summary, comment: @comment %>
  <% end %>
  <%= turbo_stream.replace "comment-form" do %>
    <%= render 'comments/form', group: @group, summary: @comment.summary, comment: Comment.new %>
  <% end %>
<% end %>
