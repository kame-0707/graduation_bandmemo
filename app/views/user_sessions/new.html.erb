<div class="flex justify-center">
  <div class="row">
    <div class="flex flex-col items-center mt-4">
      <h1 class="text-center text-xl font-bold my-10"><%= t('user_sessions.new.title') %></h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-3">
          <%= f.label :email, t('helpers.label.email')%>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, t('helpers.label.password') %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="flex justify-center my-10">
          <%= f.submit t('user_sessions.new.login'), class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class='text-center text-blue-600 underline'>
        <%= link_to t('user_sessions.new.to_register_page'), new_user_path %>
        <br>
        <%= link_to t('user_sessions.new.password_forget'), new_password_reset_path %> 
      </div>
      <div class='text-center'>
        <p>or</p>
        <p>---------------------------------</p>
      </div>
      <div class="flex justify-center mb-4">
        <%# lineでログイン %>
        <%= link_to auth_at_provider_path(provider: :line) do %>
          <%= image_tag 'line.png', width: '150', height: '100' %>
        <% end %>
      </div>
      <div class="flex justify-center">
        <%# googleでログイン %>
        <%= link_to auth_at_provider_path(provider: :google) do %>
          <%= image_tag 'google.png', width: '200', height: '100' %>
        <% end %>
      </div>
    </div>
  </div>
</div>