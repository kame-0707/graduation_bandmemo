<div class="container">
  <h2 class="text-center"><%= @group.name %></h2>
  <h4 class="text-center"><%= t('permits.index.title') %></h4>

  <div class="row mt-5">
    <div class="col-11 col-md-12 mx-auto">
    <% if @permits.exists? %>
      <div class="table-responsive">
        <table class="table table-hover text-nowrap bg-light">
          <thead class="thead-dark">
            <tr>
              <th><%= t('helpers.label.name') %></th>
            </tr>
          </thead>
          <tbody>
            <% @permits.each do |permit| %>
              <tr>
                <td><%= link_to permit.user.name,'#', class: "text-dark" %></td>
                <td class="text-right">
                  <%= button_to t('permits.index.join_permisssion'), group_group_users_path(@group, permit_id: permit.id), class: "btn btn-sm btn-success" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <P class="text-center"><%= t('permits.index.no_result') %></P>
    <% end %>
    </div>
    <div class="mx-auto mt-5"><%= paginate @permits %></div>
  </div>

  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
    <p class="text-center"><%= link_to t('permits.index.to_group_index'), group_path(@group), class: 'text-dark font-weight-bold' %></p>
    </div>
  </div>
</div>
