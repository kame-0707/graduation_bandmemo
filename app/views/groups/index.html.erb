<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h2>グループ一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー数</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td><%= group.name %></td>
              <td><%= group.introduction %></td>
              <td><%= group.group_users.count %></td>
              <% if group.owner_id == current_user.id && group.permits.exists? %>
                <td><p class="text-blue-600">オーナー：承認待ちユーザーがいます</p></td>
              <% elsif group.owner_id == current_user.id %>
                <td>オーナー</td>
              <% elsif (group.owner_id != current_user.id) && (group.group_users.exists?(user_id: current_user.id)) %>
                <td>加入中</td>
              <% elsif (group.owner_id != current_user.id) && (group.permits.exists?(user_id: current_user.id)) %>
                <td>加入申請中</td>
              <% else %>
                <td></td>
              <% end %>

              <% if group.group_users.exists?(user_id: current_user.id) %>
                <td><%= link_to '入室する', group_spots_path(group), class: "btn btn-outline btn-sm btn-secondary" %></td>
              <% else %>  
                <td></td>
              <% end %>

              <% if group.owner_id == current_user.id %>
                <td><%= link_to 'オーナー専用', group_path(group), class: "btn btn-outline btn-sm btn-secondary" %></td>
              <% else %>  
                <td></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
