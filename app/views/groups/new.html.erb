<div class="text-center text-xl font-bold mt-10">グループを作成</div>

<div class="flex flex-col items-center mt-4">
  <%= form_with model: @group, url: groups_path do |form| %>
    <div class="grid grid-cols-1 gap-4 justify-items-center w-[90vw] mx-auto">
      <%= form.label :name, 'バンド・グループ名'%>
      <%= form.text_area :name, rows: 1, class: "rounded-lg p-4 w-full" %>
      <%= form.label :introduction, '紹介文'%>
      <%= form.text_area :introduction, rows: 5, class: "rounded-lg p-4 w-full" %>
    </div>
    <div class="flex justify-center mt-4 mx-4">
      <div class="mr-4">
        <button class="btn btn-outline btn-success">
          <div class="text-xs"><%= form.submit "登録" %></div>
        </button>
      </div>
    </div>
  </div>
  <% end %>