<div class="text-center text-xl font-bold mt-10"><%= t('groups.new.title') %></div>

<div class="flex flex-col items-center mt-4">
  <%= form_with model: @group, url: groups_path do |form| %>
  <%= render 'shared/error_messages', object: form.object%>
    <div class="grid grid-cols-1 gap-4 justify-items-center mx-auto">
      <%= form.label :name, t('groups.new.group_name')%>
      <%= form.text_area :name, rows: 1, class: "rounded-lg p-4 w-[90vw] " %>
      <%= form.label :introduction, t('groups.new.introduction')%>
      <%= form.text_area :introduction, rows: 5, class: "rounded-lg p-4 w-[90vw]" %>
    </div>
    <div class="flex justify-center mt-4 mx-4">
      <div class="mr-4">
        <button class="btn btn-outline btn-success">
          <div class="text-xs"><%= form.submit t('helpers.submit.create') %></div>
        </button>
      </div>
    </div>
  <% end %>
</div>
