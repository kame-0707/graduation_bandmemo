<div class="navbar bg-base-300">
  <div class="flex-1">
    <%= link_to root_path do %>
      <div class="btn btn-ghost text-xl">
        bandmemo
      </div>
    <% end %>
    <button class="btn-sm" onclick="my_modal_1.showModal()">▼使い方</button>
    <dialog id="my_modal_1" class="modal">
      <div class="modal-box">
          <p class="py-4">
            <%= render 'shared/explanation' %>
          </p>
          <div class="modal-action">
            <form method="dialog">
              <!-- if there is a button in form, it will close the modal -->
              <button class="btn">閉じる</button>
            </form>
          </div>
      </div>
    </dialog>
  </div>
  <div class="flex-1">
    <a href="https://twitter.com/intent/tweet?text=【bandmemo】%0abandmemoで、バンド練を振り返ろう。%0a%23bandmemo_kame%0a%0a&url=https://bandmemo-app.onrender.com" class="twitter-share-button" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    <ul class="menu menu-horizontal px-1">
      <li><%= link_to 'ログアウト', logout_path, data: { turbo_method: :delete } %></li>
      <li>
        <details class="relative">
          <summary class="cursor-pointer">
            メニュー
          </summary>
          <ul class="p-2 bg-base-100 rounded-t-none absolute right-0 top-full mt-1 shadow-lg z-50">
            <li><a><%= link_to 'グループを作成する', new_group_path %></a></li>
            <li><a><%= link_to 'グループ一覧', groups_path %></a></li>
          </ul>
        </details>
      </li>
    </ul>
  </div>
</div>