<%= render 'shared/personal_band_name' %> 
<div class="grid grid-cols-1 justify-items-center">
  <div class="bg-white shadow-md rounded-lg p-4 w-[90vw] mx-auto my-4">
    <% if @voice.user_id == current_user.id %>
      <div class="flex justify-center space-x-4 mb-2">
        <%= link_to edit_personal_voice_path(@voice) do %>
          <i class="fa-solid fa-pen"></i>
        <% end %>
        <%= link_to personal_voice_path, data: { turbo_method: :delete, turbo_confirm: "削除しますか" } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    <% end %>
    <div class="mt-2">
      <%= @voice.content %>
    </div>
  </div>
    <%= link_to personal_voices_path do %>
      <button class="btn btn-outline btn-secondary">
        <div class="text-xs">音声文字起こし一覧に戻る</div>
      </button>
    <% end %>
</div>
<%= render 'shared/privacy_policy' %>
<%= render 'shared/in_personal_menu' %>

