<div class="flex justify-center">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1 class="text-center text-xl font-bold mt-10">パスワードリセット申請</h1>
      <%= form_with url: password_resets_path do |f| %>
        <div class="mb-3">
          <%= f.label :email%>
          <%= f.email_field :email, rows: 1, class: "rounded-lg p-4 w-full"%>
        </div>
        <%= f.submit "送信する", class: "btn btn-primary" %>
      <% end %>
      <div class='text-center'>
        <%= link_to 'ログインページへ', login_path %>
      </div>
    </div>
  </div>
</div>