<div class="flex justify-center">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1 class="text-center text-xl font-bold mt-10"><%= t('password_resets.edit.title') %></h1>
      <%= form_with model: @user, url: password_reset_path(@token) do |f| %>
      <%= render 'shared/error_messages', object: f.object%>
        <div class="my-3">
          <%= f.label :email%>
          <br>
          <%= @user.email %>
        </div>
        <div class="mb-3">
          <%= f.label :password %>
          <%= f.password_field :password, rows: 1, class: "rounded-lg p-4 w-full"%>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, rows: 1, class: "rounded-lg p-4 w-full"%>
        </div>
        <div class="flex justify-center">
            <%= f.submit t('helpers.submit.update'), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>