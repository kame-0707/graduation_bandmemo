<div class="w-full flex justify-center my-3" id="comment-form">
  <div class="w-[90vw] mx-auto">
    <%= form_with model: comment, url: personal_summary_personal_comments_path(summary) do |f| %>
      <%= f.label :content, "コメント"%>
      <%= f.text_area :content, class: "rounded-lg p-4 w-[90vw]", row: "4", placeholder: "コメントを入力してください" %>
      <div class="flex justify-center my-4">
          <%= f.submit "コメントを投稿", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
